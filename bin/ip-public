#
#  Reports Public IP
#

if [ "$1" != "verified" ]; then
    # used by network-check
    network-check || exit 1
fi

if  curl -s -4 https://ifconfig.me || curl -s https://ifconfig.me; then
    printf '\n'
else
    echo "Error: Unable to determine"
    exit 1
fi
